<?xml version="1.0" encoding="UTF-8"?>
<raig-web-config>
    <!--
        RAIG Framework Web Interface Configuration
        
        This XML file defines the configuration for the web interface
        of the Responsible AI Governance (RAIG) framework.
    -->
    
    <server>
        <host>localhost</host>
        <port>8080</port>
        <name>RAIG Web Interface</name>
        <version>1.0.0</version>
    </server>
    
    <framework>
        <name>RAIG-Java</name>
        <description>
            Responsible AI Governance framework - A modular, enterprise-grade 
            Java implementation for operationalizing AI ethics principles
        </description>
        <reference>Papagiannidis et al. (2025)</reference>
    </framework>
    
    <pillars>
        <!--
            The Seven Pillars of Responsible AI Governance
            Each pillar represents a critical dimension of ethical AI
        -->
        
        <pillar>
            <id>1</id>
            <name>Accountability</name>
            <icon>üë§</icon>
            <color>#3B82F6</color>
            <description>
                Ensures clear responsibility for AI decisions.  Every decision 
                must have a responsible entity assigned for audit trails and governance. 
            </description>
            <module>pillars.accountability.AccountabilityModule</module>
            <checks>
                <check>Responsible entity assignment</check>
                <check>Audit trail maintenance</check>
                <check>Decision traceability</check>
            </checks>
        </pillar>
        
        <pillar>
            <id>2</id>
            <name>Fairness and Non-Discrimination</name>
            <icon>‚öñÔ∏è</icon>
            <color>#10B981</color>
            <description>
                Prevents biased outcomes across demographic groups. Monitors bias 
                scores and ensures equitable treatment for all users.
            </description>
            <module>pillars.fairness.FairnessModule</module>
            <checks>
                <check>Bias score analysis</check>
                <check>Demographic parity</check>
                <check>Equal opportunity assessment</check>
            </checks>
        </pillar>
        
        <pillar>
            <id>3</id>
            <name>Human Agency and Oversight</name>
            <icon>ü§ù</icon>
            <color>#8B5CF6</color>
            <description>
                Maintains human control over critical AI decisions. Ensures humans 
                can override automated decisions when necessary.
            </description>
            <module>pillars.human.HumanOversightModule</module>
            <checks>
                <check>Human override availability</check>
                <check>Critical decision review</check>
                <check>Human-in-the-loop validation</check>
            </checks>
        </pillar>
        
        <pillar>
            <id>4</id>
            <name>Privacy and Data Governance</name>
            <icon>üîí</icon>
            <color>#F59E0B</color>
            <description>
                Protects user data and ensures consent. Validates data usage 
                permissions and sensitive data handling procedures.
            </description>
            <module>pillars.privacy.PrivacyGovernanceModule</module>
            <checks>
                <check>User consent verification</check>
                <check>Sensitive data protection</check>
                <check>Data minimization compliance</check>
            </checks>
        </pillar>
        
        <pillar>
            <id>5</id>
            <name>Technical Robustness and Safety</name>
            <icon>üõ°Ô∏è</icon>
            <color>#EF4444</color>
            <description>
                Ensures AI systems are reliable and safe. Validates confidence 
                levels and prediction quality against safety thresholds.
            </description>
            <module>pillars.robustness.RobustnessSafetyModule</module>
            <checks>
                <check>Confidence threshold validation</check>
                <check>Safety boundary checks</check>
                <check>Prediction reliability assessment</check>
            </checks>
        </pillar>
        
        <pillar>
            <id>6</id>
            <name>Transparency and Explainability</name>
            <icon>üí°</icon>
            <color>#06B6D4</color>
            <description>
                Makes AI decisions understandable. Requires explanations for 
                all decisions affecting users to build trust and enable accountability.
            </description>
            <module>pillars.transparency.TransparencyModule</module>
            <checks>
                <check>Explanation availability</check>
                <check>Decision rationale clarity</check>
                <check>Interpretation accessibility</check>
            </checks>
        </pillar>
        
        <pillar>
            <id>7</id>
            <name>Societal and Environmental Well-Being</name>
            <icon>üåç</icon>
            <color>#14B8A6</color>
            <description>
                Assesses broader social and environmental impact. Flags decisions 
                with potential negative consequences to communities or environment.
            </description>
            <module>pillars.wellbeing.WellBeingModule</module>
            <checks>
                <check>Social impact assessment</check>
                <check>Environmental impact evaluation</check>
                <check>Community welfare consideration</check>
            </checks>
        </pillar>
    </pillars>
    
    <policy>
        <maxBiasThreshold>0.3</maxBiasThreshold>
        <minConfidence>0.5</minConfidence>
        <requireExplanation>true</requireExplanation>
        <requireResponsibleEntity>true</requireResponsibleEntity>
        <requireUserConsent>true</requireUserConsent>
    </policy>
    
    <governance>
        <roles>
            <role>ETHICS_OFFICER</role>
            <role>DATA_PROTECTION_OFFICER</role>
            <role>AI_AUDITOR</role>
            <role>SYSTEM_ADMINISTRATOR</role>
        </roles>
        
        <workflow>
            <approvalRequired>true</approvalRequired>
            <feedbackEnabled>true</feedbackEnabled>
            <stakeholderReview>true</stakeholderReview>
        </workflow>
    </governance>
    
    <api>
        <endpoints>
            <endpoint>
                <path>/api/pillars</path>
                <method>GET</method>
                <description>Retrieve all framework pillars</description>
            </endpoint>
            <endpoint>
                <path>/api/evaluate</path>
                <method>POST</method>
                <description>Evaluate an AI decision</description>
            </endpoint>
            <endpoint>
                <path>/api/scenarios</path>
                <method>GET</method>
                <description>Retrieve demo scenarios</description>
            </endpoint>
        </endpoints>
    </api>
    
    <integration>
        <biasAnalysis>
            <provider>TrustyAI</provider>
            <enabled>true</enabled>
        </biasAnalysis>
        <explainability>
            <provider>TrustyAI</provider>
            <enabled>true</enabled>
        </explainability>
        <dataProcessing>
            <provider>Apache Spark</provider>
            <enabled>false</enabled>
        </dataProcessing>
    </integration>
    
    <ui>
        <theme>
            <primaryColor>#667eea</primaryColor>
            <secondaryColor>#764ba2</secondaryColor>
            <successColor>#10b981</successColor>
            <errorColor>#ef4444</errorColor>
            <warningColor>#f59e0b</warningColor>
        </theme>
        
        <features>
            <pillarVisualization>true</pillarVisualization>
            <scenarioDemo>true</scenarioDemo>
            <customEvaluation>true</customEvaluation>
            <realTimeValidation>true</realTimeValidation>
        </features>
    </ui>
    
    <metadata>
        <createdDate>2025-01-15</createdDate>
        <version>1.0.0</version>
        <author>RAIG Framework Team</author>
        <license>MIT</license>
        <repository>https://github.com/eld-dlh/RAIG-Java</repository>
    </metadata>
</raig-web-config>